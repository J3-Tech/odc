extends layout

block content
    div.section.no-pad-bot
    div.container
        div.row
            p.flow-text.center Document Convertor provides the facility of converting almost all office documents into image which make documents viewable without the need of any office suite.
            ul.collection.with-header
                li.collection-header
                    h4 Supported File Formats
                li.collection-item Rich Text Format (rtf)
                li.collection-item Open Document text (odt)
                li.collection-item MS Word (doc, docx)
                li.collection-item Open Document Spreedsheet (ods)
                li.collection-item MS Excel (xls, xlsx)
                li.collection-item Open Document Presentation (odp)
                li.collection-item MS Powerpoint (ppt, pptx)
                li.collection-item Portable Document Format (pdf)
            form(action="/upload", method="post", enctype="multipart/form-data").col.s12
                div.file-field.input-field
                    div.btn
                        span file
                        input(type="file", name="document" accept="application/pdf")
                    div.file-path-wrapper
                        input.file-path.validate(type="text")
                    button.btn(type="submit") Upload
